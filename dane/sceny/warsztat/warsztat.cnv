    ARRAYPRZEDMIOTY^ADD("RURASPUSTOWA"); /
    ARRAYPRZEDMIOTY^ADD("RADYJKO"); /
    ARRAYPRZEDMIOTY^ADD("SZNUR"); /
    ARRAYPRZEDMIOTY^ADD("DRABINA"); /
    ARRAYPRZEDMIOTY^ADD("KOTWICA"); /
    ARRAYPRZEDMIOTY^ADD("PRALKA"); /
    BEHINITSCENE^RUN("WARSZTAT"); /
